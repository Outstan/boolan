<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/news_search_li"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/news_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="7dp"
            android:background="@drawable/border_text_white30"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:src="@drawable/find_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-6dp"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/gray_dark" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nwes_medata"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.15">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/nwes_photo"
                android:layout_width="70dp"
                android:layout_height="67dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:backgroundImage="@android:color/white"
                fresco:fadeDuration="4000"
                fresco:failureImage="@mipmap/icon_failure"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/icon_placeholder_yuan"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:progressBarAutoRotateInterval="3000"
                fresco:progressBarImage="@mipmap/icon_progress_bar"
                fresco:progressBarImageScaleType="centerCrop"
                fresco:retryImage="@mipmap/icon_retry"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="@color/gray_trans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nwes_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="木杉"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/nwes_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="多久回家"
                android:textColor="@color/font_gray"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nwes_yfollow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center">
                <TextView
                    android:id="@+id/news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下午11:23" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_trans" />
</LinearLayout>