<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/login_linearlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/login_back"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/x" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/login_user_name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"
        android:hint="手机号码"
        android:textSize="18sp"
        app:met_baseColor="#000"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="手机号码"
        app:met_floatingLabelTextColor="@color/blue_trans"
        app:met_floatingLabelTextSize="15sp"
        app:met_iconLeft="@drawable/account"
        app:met_primaryColor="@color/blue_trans"
        app:met_textColor="@color/blue_trans"
        app:met_textColorHint="#000" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/login_psw"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:textSize="18sp"
            app:met_baseColor="#000"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="密码"
            app:met_floatingLabelTextColor="@color/blue_trans"
            app:met_floatingLabelTextSize="15sp"
            app:met_iconLeft="@drawable/password"
            app:met_primaryColor="@color/blue_trans"
            app:met_textColor="@color/blue_trans"
            app:met_textColorHint="#000" />

        <Button
            android:id="@+id/login_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="320sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/password_ns"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_fin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="320sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/password_s"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"

        android:orientation="horizontal">

        <Button
            android:id="@+id/login_Reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23sp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23sp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp">

        <CheckBox
            android:id="@+id/login_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="记住密码"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/login_findpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入主页"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_user"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-275dp"
        android:background="@color/white"
        android:divider="#33dddddd"
        android:dividerHeight="1dp"></ListView>

</LinearLayout>