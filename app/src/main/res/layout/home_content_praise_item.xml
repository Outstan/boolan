<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_contentz_photo"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:backgroundImage="@android:color/white"
            fresco:fadeDuration="5000"
            fresco:failureImage="@mipmap/icon_failure"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/icon_placeholder_yuan"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:retryImage="@mipmap/icon_retry"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="1dp"
            fresco:roundingBorderColor="@color/gray_trans"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border_bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">
            <TextView
                android:id="@+id/home_contentz_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:text="马里奥的小脑袋"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/home_contentz_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_marginTop="-2dp"
                android:text="你像一本书，我会一直读下去"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>