<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_trans">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/myd_background"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        fresco:fadeDuration="5000"
        fresco:placeholderImage="@mipmap/icon_placeholder"
        fresco:placeholderImageScaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/myd_back"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_w" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="-45dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/myd_photo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:backgroundImage="@android:color/white"
                fresco:fadeDuration="4000"
                fresco:failureImage="@mipmap/icon_failure"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/icon_placeholder_yuan"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:progressBarAutoRotateInterval="5000"
                fresco:retryImage="@mipmap/icon_retry"
                fresco:retryImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="@color/gray_trans"/>

            <TextView
                android:id="@+id/myd_nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="xy木杉"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/myd_fansi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="关注 17 | 粉丝 17"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/myd_synopsis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="简介:草方面呢皮肤呢"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myd_background"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="基本资料"
                android:textColor="@color/black_80"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="家乡"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="重庆"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="所在地"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_localtion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="四川"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="性别"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="男"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="生日"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="1998-08-18"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="年龄"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="21"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="邮箱"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="1187453256@qq.com"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="left|center"
                    android:text="电话"
                    android:textColor="@color/font_normal"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/myd_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="18965423658"
                    android:textColor="@color/black_80"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/gray_trans" />

            <TextView
                android:id="@+id/myd_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="更新基本资料"
                android:textColor="@color/blue"
                android:textSize="16dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/myd_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/myd_follow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <TextView
                android:id="@+id/myinfo_follow_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="left|center"
                android:text="已关注" />
        </LinearLayout>

        <TextView
            android:id="@+id/myd_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="聊天" />

        <LinearLayout
            android:id="@+id/myd_ta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="left|center"
                android:text="Ta的发布" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>